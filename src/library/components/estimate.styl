.estimate
	background-color color1
	padding-top 4em
	padding-bottom 4em

.estimate-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	margin-bottom 2em
	flex-row()
	align-items flex-start
	
.estimate__title
	some-title(color5)
	text-transform uppercase
	align-center()
	margin-top 0

.estimate-column
	width 50%
	padding 2em 1em
	padding-bottom 0

.estimate
	table
		border 1px solid color5
		border-collapse: collapse
		thead
			tr
				background-color color3
		tbody
			tr:nth-child(2n-2)
				background-color color3
			tr:nth-child(2n-1)
				background-color color4
		td
			border 3px solid color5
			text-align center
			ps-bold(1rem, 1.3, color5)
			height 2.5em
			padding 0.2em 0.2em

@media screen and (max-width: 992px)
	.estimate-container .goods-column
		display none
	.estimate-column
		width 100%
		padding 0 2em
		padding-top 2em
		flex-row()

.estimate-text
	some-text(color5)
	align-center()