.estimate-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()
	
.estimate__title
	some-title(color5)
	text-transform uppercase
	align-center()
	margin-top 0

.estimate__subtitle
	some-text(color1)
	align-center()

.estimate-column
	width 67%
	padding-left 2em
	padding-top 2em

.estimate
	table
		border 1px solid color5
		border-collapse: collapse
		thead
			tr
				background-color color3
		tbody
			tr:nth-child(2n-2)
				background-color color3
			tr:nth-child(2n-1)
				background-color color4
		td
			border 3px solid color5
			text-align center
			ps-bold(1rem, 1.3, color5)
			height 2.5em
			padding 0.2em 0.2em

