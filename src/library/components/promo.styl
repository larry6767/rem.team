.promo
	background-color color5
	padding-top 4em
	padding-bottom 8em

.promo-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()

.promo-column
	width 50%
	flex-row()

.promo-subcolumn
	width 45%
	margin-left 5%

.promo-subcolumn:nth-child(2)
	width 25%
	margin-left 5%

.promo-column:nth-child(2) .promo-subcolumn
	margin-left 0

.promo-column:nth-child(2) .promo-subcolumn:nth-child(2)
	margin-right 15%
	margin-left 5%
	
.promo-title
	some-title(color1)
	align-center()
	margin-top 0
	margin-bottom 3em
	text-transform uppercase

.promo-text
	some-title(color1)
	margin-top 0

.btn-order
	btn(color5, color1)
	ps-bold(16px, 1.3, color1)
	btn-hover(color1, color1, color5)

.promo-column:nth-child(1) .promo-img {
	width 180px
	height 180px
	background url("../img/phone.svg") no-repeat left center
	background-size 120px
}

.promo-column:nth-child(2) .promo-img {
	width 180px
	height 180px
	background url("../img/roulette.svg") no-repeat left center
}

@media (max-width: 1024px)
	.promo-column:nth-child(2) .promo-subcolumn:nth-child(2)
		margin-right 5%

@media screen and (max-width: 992px)
	.promo-container
		flex-column()
	
	.promo-column
		width 550px
	
	.promo-subcolumn
		margin-left 0	

	.promo-column:first-child
		margin-bottom 5em
	
	.promo-column:nth-child(2) .promo-subcolumn:nth-child(2)
		margin-right 0
		margin-left 5%
		
@media screen and (max-width: 550px)
	.promo-column
		width 100%
		flex-column()
		
	.promo-subcolumn:nth-child(2)
		order -1

	.promo-subcolumn
		margin-left 0
		align-center()
		width 80%
	
	.promo-column:nth-child(1) .promo-subcolumn:nth-child(2)
		margin-left auto
		margin-right auto
		margin-bottom 0em
		width 80%

	.promo-column:nth-child(2) .promo-subcolumn:nth-child(2)
		margin-left auto
		margin-right auto
		margin-bottom 0em
		width 80%
	
	.promo-img
		margin 0 auto
		
	.promo-column:nth-child(1) .promo-img
		background-position center
	
	.promo-column:nth-child(2) .promo-img
		background-position right center
