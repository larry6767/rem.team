.box-modal_close {
	position: absolute;
	top: 5px;
	right: 5px;
	cursor: pointer;
	width: 27px;
	height: 27px;
	background: url("../img/lightbox/close.png");
	filter: brightness(50%); 
}

.modal-content
	width 20em
	background-color color1
	padding 0 20px
	padding-top 1em
	padding-bottom 1em
	cursor default

.form-title
	some-title(color5)
	align-center()
	text-transform uppercase

.modal-content input
	some-input(color1)
	ps-bold(1rem, 1.3, color5)
	margin-bottom 1em

.modal-content .submit-button
	some-input(color4)
	ps-bold(16px, 1.3, color1)
	margin-bottom 0.75em
	cursor pointer
	
	&:hover
		background-color color3
		border-color color3

.modal-content textarea
	some-input(color1)
	ps-bold(1rem, 1.3, color5)
	resize none
	margin-bottom 1em