.contact
	background-color color1
	padding-top 0
	padding-bottom 4em

.contact-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	margin-bottom 2em
	flex-column()
	
.contact__title
	some-title(color5)
	text-transform uppercase
	align-center()
	margin-top 0
	margin-bottom 1em

.contact__text
	some-text(color5)
	align-center()
	
.contact__phone-number
	margin 0.5em 0

.contact__btn
	display block
	font-size 0
	width 50px
	height 50px
	border 1px solid color4
	border-radius 50%
	background-color color1
	background-image url("../img/vk.png")
	background-size 35px
	background-position center
	background-repeat no-repeat
	margin 1rem auto
	transition 0.2s

.contact__btn:hover
	background-color color5