.first-screen
	position relative
	overflow hidden
	background-repeat no-repeat
	background-size cover
	background-position bottom
	
.first-screen-parallax-bg
	background-color #262626
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	z-index -2
	
.first-screen-parallax
	background-position: bottom center;
	background-size: cover;
	background-repeat: no-repeat;
	background-image url("../img/first-screen-bg.jpg")
	width: 100%;
	height: 800px;
	position: fixed;
	z-index: -1;
		
.first-screen-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	position relative
	text-align center
	flex-row()

.features-wrapper
	position relative
	background color5
	padding-top 2em
	padding-bottom 2em
	z-index 1
	
.features
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()
	justify-content space-between
	padding 1em
	&__text
		some-text(color1)
		align-center()
	&__img
		margin 1em auto
		margin-top 0

.features-column
	flex-basis 12em
	margin 0 3em
	text-align center

.underline
	position relative
	
	&:after
		content ""
		position absolute
		width 100%
		height 1px
		left 0
		bottom 1px
		background-color color1

.page-title
	page-title(color5)
	background-color color1
	padding 1em 1em

.btn-callback
	btn(color4, color4)
	ps-bold(16px , 1.3, color1)
	position absolute
	right 3em
	top 0
	&:hover
		background-color color3
		border-color color3

// form
.first-screen-form
	align-self flex-end
	width 20em
	background-color color1
	padding 0 20px
	padding-bottom 1em
	margin 0 auto
	margin-bottom 4em
	
.first-screen-form__title
	some-title(color5)
	align-center()
	text-transform uppercase

.first-screen-form__text
	some-text(color5)
	align-center()

.first-screen-form__disclaimer
	some-text(color5)
	font-size 0.8rem
	align-center()
	
.first-screen-form-list
	some-list(color5)
	margin 0.5em 0
	margin-bottom 1em
	padding-left 0

.first-screen-form__input
	some-input(color1)
	ps-bold(1rem, 1.3, color5)
	margin-bottom 1em

.first-screen-form__submit
	some-input(color4)
	ps-bold(1.2rem, 1.3, color1)
	margin-bottom 0.75em
	cursor pointer
	&:hover
		background-color color3
		border-color color3

@media (max-width: 1024px)
	.btn-callback
		right 1em
		
	.features-column
		flex-basis 12em
		margin 0 1em
		
@media (max-width: 992px)
	.btn-callback
		display none
		
	.page-title
		margin 1em auto
		
	.features
		justify-content space-around
	
	.features-column
		flex-basis 18em
		margin 0 1em
		margin-bottom 2em
		
@media (max-width: 768px)
	.page-title
		width 90%
	.features-column
		margin 0
		margin-bottom 2em	

@media (max-width: 740px)
	.features
		flex-column()
		
	.features-column
		margin 0 20vw
	.features-column
		flex-basis 10em
	.features-wrapper
		padding-bottom 0
	.features__text
		width 16em

@media (max-width: 576px)
	.features-column
		flex-basis 12em

